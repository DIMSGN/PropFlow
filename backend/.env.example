# Backend Environment Variables Template
# Copy this to .env and fill in your values

# ============================
# Server Configuration
# ============================
NODE_ENV=development
PORT=3001

# ============================
# Database Configuration
# ============================
# Database type: 'mysql' or 'postgres'
DB_DIALECT=postgres

# For local development (PostgreSQL):
DB_HOST=localhost
DB_PORT=5432
DB_NAME=propflow
DB_USER=postgres
DB_PASSWORD=your_password_here

# For local development (MySQL):
# DB_DIALECT=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=propflow
# DB_USER=root
# DB_PASSWORD=your_password_here

# For Render PostgreSQL (Production):
# DB_DIALECT=postgres
# DB_HOST=<your-render-db-host>.oregon-postgres.render.com
# DB_PORT=5432
# DB_NAME=propflow
# DB_USER=<render-db-user>
# DB_PASSWORD=<render-generated-password>

# SSL for production database
DB_SSL=false

# Database pool settings (optional)
DB_POOL_MAX=10
DB_POOL_MIN=2

# ============================
# CORS Configuration
# ============================
# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# For Render production, set to your Vercel URL:
# FRONTEND_URL=https://your-app.vercel.app

# Allow Vercel preview deployments (*.vercel.app)
ALLOW_VERCEL_PREVIEWS=true

# ============================
# Database Sync (Development Only!)
# ============================
# WARNING: Do NOT enable in production!
# Use migrations instead
SYNC_DB=false
